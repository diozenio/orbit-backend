{
  "name": "orbit-backend",
  "version": "1.0.0",
  "main": "src/server.ts",
  "repository": "https://github.com/diozenio/orbit-backend",
  "author": "diozenio <d.dionisiobsl@gmail.com>",
  "license": "MIT",
  "tsup": {
    "entry": [
      "src"
    ],
    "outdir": "build",
    "format": [
      "esm"
    ],
    "splitting": false,
    "clean": true
  },
  "scripts": {
    "dev": "tsx watch src/http/server.ts",
    "start": "node build/http/server",
    "lint": "eslint --fix src --ext .ts",
    "build": "tsup --out-dir build",
    "migrate": "prisma migrate dev",
    "prisma": "prisma studio"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@prisma/client": "^6.5.0",
    "fastify": "^5.2.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.17",
    "dotenv": "^16.4.7",
    "eslint": "^9.23.0",
    "prisma": "^6.5.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
